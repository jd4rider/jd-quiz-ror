<div id="answer_buttons">
    <div class="font-bold text-xl mb-2 text-center py-4"><%=Nokogiri::XML.fragment @questions.questions[@data['question_no'].to_i]['question'] %></div>

    <% @answers.each_with_index do |answer, index| %>
        <button class="bg-blue-500 m-0.5 w-full hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" 
                hx-post="/valanswers" 
                hx-vals='{"sessid": "<%= @data['sessid'] %>", "answers": "<%= @answers.join('&%&#') %>", "selectedAns": "<%= index %>" , "question_no": "<%= @data['question_no'] %>" }' 
                hx-target="#answer_buttons"
                hx-swap="innerHTML" >
            <%=Nokogiri::XML.fragment answer %>
        </button>
    <% end %>
</div>
